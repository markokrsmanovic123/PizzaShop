@model Pizza

<div>
    <div class="row">
        <div class="col-md-12 mt-4 mb-1">
            <h1>
                @Model.Name <small><i style="font-weight:400">@Model.ShortDescription</i></small>
            </h1>
        </div>
    <div class="row">
        <div class="col-md-8">
            <img style="max-width:100%" src="@Url.Content(@Model.ImageUrl)" />
        </div>
        <div class="col-md-4 pt-3">
            <h2 class="mt-3">O ovoj pici</h2>
                <h5 class="text-center my-3" style="font-weight:200">@Model.Name</h5>
                <p>@Model.LongDescription</p>
            <div class="d-flex flex-row justify-content-between mt-4">
                <div style="font-size: 1.8rem">
                    <b>@Model.Price &euro;</b>
                </div>
                <div>
                    <button type="button" class="btn btn-success">Dodaj u korpu</button>
                </div>
            </div>
        </div>
    </div>
</div>