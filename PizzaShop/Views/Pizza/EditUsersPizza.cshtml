@using PizzaShop.ViewModels
@model PizzaUpdateViewModel

<form asp-action="UpdateUserPizza" asp-controller="Pizza" method="post" role="form" class="mt-5">
    <div class="col-12 col-md-3">
        <label asp-for="PizzaName" class="form-label"></label>
        <input asp-for="PizzaName" class="form-control" />
    </div>
    @Html.HiddenFor(m => m.PizzaID)
    <div class="my-3">
        <h4>Sastojci</h4>
    </div>
    <div class="form-group form-check">
        <div class="col-md-8">
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Dough" checked onclick="return false" />
                <label class="form-check-label" asp-for="@Model.Dough"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Sauce" />
                <label class="form-check-label" asp-for="@Model.Sauce"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Ham" />
                <label class="form-check-label" asp-for="@Model.Ham"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Pepperoni" />
                <label class="form-check-label" asp-for="@Model.Pepperoni"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Mozzarella" />
                <label class="form-check-label" asp-for="@Model.Mozzarella"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Parmigiano" />
                <label class="form-check-label" asp-for="@Model.Parmigiano"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Pecorino" />
                <label class="form-check-label" asp-for="@Model.Pecorino"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Mushrooms" />
                <label class="form-check-label" asp-for="@Model.Mushrooms"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Olives" />
                <label class="form-check-label" asp-for="@Model.Olives"></label>
            </div>
            <div>
                <input class="form-check-input" type="checkbox" asp-for="@Model.Peppers" />
                <label class="form-check-label" asp-for="@Model.Peppers"></label>
            </div>
        </div>
    </div>
    <div class="mt-3 col-md-4">
        <input type="submit" class="btn btn-primary" value="Napravi izmene" />
    </div>
</form>