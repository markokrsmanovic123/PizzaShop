@model IEnumerable<Pizza>

<table class="table my-3">
    <tr>
        
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <td>
                    <div class="card bg-white text-black text-center p-3" style="max-height: fit-content">
                    <blockquote class="blockquote mb-0">
                    <p>Sve pice su od prirodnih sastojaka</p>
                    <footer class="blockquote-footer">
                        <small>
                            <cite title="Source Title">Andreja</cite>
                        </small>
                    </footer>
                    </blockquote>
                    </div>
                </td>
             i++;
            }
            <td class="col-4">
                <div class="card">
                    <img class="card-img-top" src="@Url.Content(Model.ElementAt(i).ImageThumbnailUrl)" alt="@Model.ElementAt(i).Name">
                    <div class="card-body">
                        <h4 class="card-title">
                            @Model.ElementAt(i).Name
                        </h4>
                        <p class="card-text">
                            @Model.ElementAt(i).ShortDescription
                        </p>
                        <a href="Details/@Model.ElementAt(i).Id"><button type="button" class="btn btn-primary">Pogledaj detalje</button></a>
                    </div>
                </div>
            </td>
            @if ((i + 1) % 3 == 0)
            {
                @:</tr><tr>
            }
            @if (i == Model.Count() / 2)
            {
                <td>
                    <div class="card bg-primary text-white text-center p-3" style="max-height: fit-content">
                    <blockquote class="blockquote mb-0">
                    <p>IFS picerija pravi najukusnije pice koje sam ikad probala</p>
                    <footer class="blockquote-footer text-white">
                        <small>
                            <cite title="Source Title">Marina Damnjanović</cite>
                        </small>
                    </footer>
                    </blockquote>
                    </div>
                </td>
             i++;
            }
            @if (i == Model.Count() - 1)
            {
                <td>
                    <div class="card bg-white text-black text-end p-3" style="max-height: fit-content">
                    <blockquote class="blockquote mb-0">
                    <p>Ovo MORATE probati.Fantastično je.<br />Verujte mi.</p>
                    <footer class="blockquote-footer">
                        <small>
                            <cite title="Source Title">Nemanja Mosorinski u Stvar Ukusa</cite>
                        </small>
                    </footer>
                    </blockquote>
                    </div>
                </td>
            }
        }
    </tr>
</table>

