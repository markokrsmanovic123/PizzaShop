@model IEnumerable<Pizza>

<div class="mt-3">
    <h3>Ovde se nalaze pizze koje ste vi napravili!</h3>
    <p>Ukoliko to jos uvek niste uradili, mozete uraditi <a asp-action="CustomPizza" asp-controller="Pizza">ovde.</a></p>
</div>

<div class="mt-5">
    <table class="table table-bordered mt-3">
        <tr style="background-color:#a593c2">
            <th>Ime pizze</th>
            <th>Sastojci</th>
            <th>Cena</th>
            <th></th>
        </tr>

        @foreach (var pizza in Model)
        {
            <tr class="align-middle" style="background-color:#f8f9fa">
                <td>@pizza.Name</td>
                <td>@pizza.LongDescription</td>
                <td>@pizza.Price.ToString("c")</td>
                <td class="text-center">
                    <a class="btn btn-primary" asp-action="EditUsersPizza" asp-controller="Pizza" asp-route-pizzaId="@pizza.Id">Izmeni pizzu</a>
                    <a class="btn btn-danger" asp-action="RemoveUsersPizza" asp-controller="Pizza" asp-route-pizzaId="@pizza.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>